{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "outDir": "public/assets/js",
    "sourceMap": false,
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2017"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "rootDirs": [
      "./src/js",
    ],
    "paths": {
      "axios": [
        "node_modules/axios/dist/axios",
        "node_modules/axios/index.d.ts"
      ]
    }
  },
  "include": [
    "./src/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "src/js/app.ts"
  ]
}
